{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "airbnb",
    "airbnb-typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "overrides": [
    {
      "files": [
        "**/*.ts",
        "**/*.tsx"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": "./tsconfig.json"
      },
      "plugins": [
        "@typescript-eslint"
      ],
      "extends": [
        "airbnb-typescript"
      ],
      "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jest": true
      }
    }
  ],
  "plugins": [
    "react"
  ],
  "rules": {
    "react/static-property-placement": "off",
    "max-len": "off",
    "no-plusplus": "off",
    "react/react-in-jsx-scope": "off"
  },
  "ignorePatterns": ["dist", ".eslintrc"],
  "globals": {
    "document": false,
    "$": false
  }
}